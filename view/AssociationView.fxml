<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox 
    styleClass="background" 
    prefHeight="420.0" prefWidth="600.0" spacing="0" 
    xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.AssociationController"
>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

    <ImageView fitWidth="600" fitHeight="220" preserveRatio="false">
        <Image url="@/view/NBA_Back.jpg"/>
    </ImageView>
    <VBox alignment="CENTER" spacing="0">
         <Region prefHeight="20" />
        <HBox alignment="CENTER" spacing="220">
            <Button text="Explore the teams" styleClass="menu-button" onAction="#exploreTeams"/>
            <Button text="Arrange a new season" styleClass="menu-button" onAction="#newSeason"/>
        </HBox>
        <Region prefHeight="30" />
        <Button text="Exit" styleClass="menu-button" onAction="#exit"/>
        <Region prefHeight="10" />
    </VBox>
</VBox>
